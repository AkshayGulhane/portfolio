{
  "plugins": ["react", "graphql", "compat"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "graphql": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "compat/compat": "error"
  },
  "settings": {
    "polyfills": ["promises"]
  }
}
